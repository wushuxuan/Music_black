/* pages/person/person.wxss */
.person-header{
  width:100%;
  color:#fff;

  text-align: center;
}
.person-header>view{
  display: inline-block;
  border-radius: 50%;
}
.person-header .flex01{
    display: inline-block;
    border-radius: 50%;
  background: rgba(219, 31, 96, 0.1)
}
.person-header .flex02{
    display: inline-block;
  border-radius: 50%;
  margin:0 auto;
  background: rgba(219, 31, 96, 0.2)
}
.person-header .flex03{
    display: inline-block;
  border-radius: 50%;
  margin:0 auto;
  background: rgba(167, 25, 101, 0.5)
}
.person-header .flex04{
    display: inline-block;
  border-radius: 50%;
  margin:0 auto;
  font-size:14px;
  background: rgba(219, 31, 96, 0.35)
}
.person-header image{
  width:60px;
  height:60px;
  border-radius: 50%;
  margin-bottom:15%;
}
.person-header .flex04>view:nth-child(2){
  width:100%;
  text-align: center;
  font-size:20px;
  margin-bottom:3%;
}

/*列表*/
.content{
  width:100%;
  margin-top:5%;
}
.flex-wrap{
  width:90%;
  display: flex;
  flex-flow: row;
  margin:0 auto 5%;
}
.flex-wrap .flex-left{
  width:15%;
  text-align: center;
  height:40px;
  line-height: 40px;
}
.flex-wrap .flex-left text{
  font-size:30px;
}
.flex-wrap .flex-center{
  width:65%;
  height:40px;
  display: flex;flex-flow: column;
}
.flex-wrap .flex-center .flex-top{
  width:100%;
  font-size:14px;
  height:20px;
  line-height: 20px;
}
.flex-wrap .flex-center .flex-bottom{
  width:100%;
  font-size:10px;
  height:20px;
  line-height: 20px;
  color:#707070;
}
.flex-wrap .flex-right{
  width:20%;
  text-align: right;
  height:40px;
  display: flex;
  flex-flow: column;
}
.flex-wrap .flex-right .flex-top{
  width:100%;
  font-size:14px;
  height:20px;
  line-height: 20px;
}
.flex-wrap .flex-right .flex-bottom{
  width:100%;
  font-size:10px;
  height:20px;
  line-height: 20px;
  color:#707070;
}
<!--pages/person/person.wxml-->
<view class="container">
<view class="person-header">
  <view class="flex01" style="width:{{width}}px;height:{{height}}px;margin-top:-{{height*0.3}}px;">
    <view class="flex02" style="width:{{width*0.9}}px;height:{{height*0.9}}px;margin-top:{{(height-height*0.9)/2}}px">
      <view class="flex03" style="width:{{width*0.8}}px;height:{{height*0.8}}px;margin-top:{{(height*0.9-height*0.8)/2}}px">
        <view class="flex04" style="width:{{width*0.4}}px;height:{{height*0.4}}px;margin-top:{{(height*0.8-height*0.4)/2}}px">
        <image style="width:{{width*0.25}}px;height:{{width*0.25}}px;margin-top:{{(height*0.4-height*0.25-10)/2}}px;border:5px solid #DC1F5F;" src="{{avatarUrl}}"></image>
        <view>{{nickName}}</view>
        <view>{{country}} - {{city}}</view>
        </view>
      </view>
    </view>
  </view>
</view>

<view class="content">
  <view class="flex-wrap">
    <view class="flex-left"><text style="color:#48c23d" class="iconfont icon-listenting"></text></view>
    <view class="flex-center">
      <view class="flex-top">正在播放</view>
      <view class="flex-bottom">把你喜欢的分享给更多的人吧</view>
    </view>
    <view class="flex-right">
      <view class="flex-top">60</view>
      <view class="flex-bottom">First</view>
    </view>
  </view>

